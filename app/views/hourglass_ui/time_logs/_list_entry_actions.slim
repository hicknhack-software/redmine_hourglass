- if policy(time_log).book?
  = link_to '', hourglass_ui_book_time_logs_path(time_log), class: 'icon icon-time js-show-inline-form', title: t('hourglass.ui.lists.button_book'), remote: true, data: {type: 'html'}
- if policy(time_log).change?
  = link_to '', hourglass_ui_edit_time_logs_path(time_log), class: 'icon icon-edit js-show-inline-form', title: t(:button_edit), remote: true, data: {type: 'html'}
- if policy(time_log).destroy?
  = link_to '', hourglass_time_log_path(time_log), class: 'icon icon-del js-hourglass-remote', title: t(:button_delete), remote: true, method: :delete, data: {confirm: t(:text_are_you_sure)}
